/**
 * Остановите взломщика!
 * Он собирается уничтожить наш корабль.
 */
this.run = function(scout)
{
	// ЕСЛИ условие является истинным.
	// В данном случае (2 === 2) - истинное условие.
	if (2 === 2)
	{
		// ТО взломщик уничтожит корабль.
		scout.destroy();
	}

	// ЕСЛИ условие является истинным.
	if (5 < 3)
	{
		// ТО BBot выведет информацию о состоянии системы.
		BBotDebug(scout.log());
	}
}
